{% extends 'base.html.twig' %}

{% block title %}Offer index{% endblock %}

{% block body %}
    <h1>Offer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>ContractType</th>
                <th>Salary</th>
                <th>Duration</th>
                <th>Date</th>
                <th>CreationDate</th>
                <th>EndDate</th>
                <th>Description</th>
                <th>IsAnonymous</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.id }}</td>
                <td>{{ offer.title }}</td>
                <td>{{ offer.contractType }}</td>
                <td>{{ offer.salary }}</td>
                <td>{{ offer.duration }}</td>
                <td>{{ offer.startDate ? offer.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ offer.creationDate ? offer.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ offer.endDate ? offer.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ offer.description }}</td>
                <td>{{ offer.isAnonymous ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('offer_show', {'id': offer.id}) }}">show</a>
                    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('offer_new') }}">Create new</a>
{% endblock %}
