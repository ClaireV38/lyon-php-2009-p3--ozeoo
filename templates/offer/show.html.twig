{% extends 'base.html.twig' %}

{% block title %}Annonce {{ offer.title }}{% endblock %}

{% block body %}
    {% include '/company/_navbar.html.twig' %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('company_index') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path("offer_applicants", {id: offer.id}) }}">{{ offer.title }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Détail</li>
        </ol>
    </nav>
<div class="container offerDetail">
    <h1>{{ offer.title }}</h1>
    <div class="card startDateContractType ">
        <div class="startDateOfferDetail">
            <h3>Date de début : </h3>
            <h5>{{ offer.startDate |date("d/m/Y") }}</h5>
        </div>
        <div class="contractTypeOfferDetail">
            <h3>Type de Contrat : </h3>
            <h5>{{ offer.contractType }}</h5>
        </div>
        <div class="cityOfferDetail">
            <h3>Où ? : </h3>
            <h5>{{ offer.city }}</h5>
        </div>
        <div class="salaryOfferDetail">
            <h3>Salaire : </h3>
            <h5>{{ offer.salary }}</h5>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Description de l'offre :</h5>
            <p class="card-text">{{ offer.description }}</p>
        </div>
    </div>

    <div class="skillsOfferDetail">
        <div class="hardSkillsOfferDetail">
            <ul class="list-group hardSkills">
                <li class="list-group-item active btn-bleuOze">Compétences Techniques</li>
                {% for hardSkill in offer.hardSkills %}
                    <li class="list-group-item">{{ hardSkill.name }}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="softSkillsOfferDetail">
            <ul class="list-group softSkills">
                <li class="list-group-item active btn-bleuOze">Compétences Comportementales</li>
                {% for softSkill in offer.softSkills %}
                    <li class="list-group-item">{{ softSkill.name }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
