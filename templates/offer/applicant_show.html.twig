{% extends 'base.html.twig' %}

{% block title %}Candidat ayant postulé{% endblock %}

{% block body %}
    {% include '/company/_navbar.html.twig' %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4" id="candidateInfo">
                <h1>{{ applicant.firstname }}</h1>
                <div id="listApplicantInfo">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Description : </strong>{{ applicant.personality }}</li>
                        <li class="list-group-item"><strong>Ville : </strong>{{ applicant.city }}</li>
                        <li class="list-group-item"><strong>Mobilité : </strong>{{ applicant.mobility }}</li>
                    </ul>
                </div>
                <div id="buttonDetails">
                    <a href="{{ path('company_index') }}"><button class="btn btn-vertOze">Retour à l'accueil</button></a>
                </div>
            </div>
            <div class="col-md" id="skillsList">
                <div id="list-HardSkill">
                    <ul class="list-group" >
                        <li class="list-group-item active btn-bleuOze">Compétences Techniques Matchées</li>
                        {% for hardSkill in applicant.hardSkills %}
                            {% if hardSkill in matchHardSkills %}
                                <li class="list-group-item ">{{ hardSkill.name }}</li>
                            {% endif %}
                        {% endfor %}
                        <li class="list-group-item active btn-bleuOze">Compétences Techniques Supplémentaires</li>
                        {% for hardSkill in applicant.hardSkills %}
                                {% if  hardSkill not in matchHardSkills %}
                        <li class="list-group-item ">{{ hardSkill.name }}</li>
                                {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                <ul class="list-group" id="list-SoftSkill">
                    <li class="list-group-item active btn-orangeOze">Compétences Comportementales Matchées</li>
                    {% for softSkill in applicant.softSkills %}
                        {% if softSkill in matchSoftSkills %}
                            <li class="list-group-item ">{{ softSkill.name }} </li>
                        {% endif %}
                    {% endfor %}
                    <li class="list-group-item active btn-orangeOze">Compétences Comportementales Supplémentaires</li>
                    {% for softSkill in applicant.softSkills %}
                        {% if softSkill not in matchSoftSkills %}
                            <li class="list-group-item ">{{ softSkill.name }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
