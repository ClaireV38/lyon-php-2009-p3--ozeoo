{% extends 'base.html.twig' %}

{% block title %}Candidats qui matchent{% endblock %}

{% block body %}
    {% include '/company/_navbar.html.twig' %}
<div class="container d-block">
    <h1 class="d-block text-center">Annonce</h1>
    <div class="card container flex-column align-items-center text-center" id="announce-card-matches">
        <div class="card-body">
            <h5 class="card-title">{{ offer.title }}</h5>
            <div>type de contrat : {{ offer.contractType }}</div>
            <div>ville : {{ offer.city }}</div>
            <div>date de cr√©ation : {{ offer.creationDate|date("d/m/Y") }}</div>
            <a href="{{ path("offer_show", {id: offer.id}) }}"
               class="d-inline-block btn btn-offer btn-orangeOze d-inline-flex">Voir fiche</a>
        </div>
    </div>
</div>


<div class="container d-block">
    <h1 class="text-center">Liste des candidats qui matchent</h1>
    {% for applicant in applicants %}
        <div class="card container" id="announce-card-matches">
            <div class="row-announce card-body flex-column flex-md-row align-items-center justify-content-between">
                <div class="d-inline-block mb-2 mr-md-2 w-100 mb-0 text-center">
                    <h5 class="card-title" id="title-announce-desktop">{{ applicant.firstname }}</h5>
                </div>
                <div class="row-info-nb d-md-inline-block flex-md-row align-items-center text-center">
                    <p class="d-md-inline-block mr-md-2 mb-1" class="card-text"> nb hardskills :
                        <strong>120</strong></p>
                    <p class="d-md-inline-block mr-md-2 mb-1" class="card-text"> nb softskills :
                        <strong>10</strong></p>
                </div>
                <div class="row-info-right w-100 flex-md-row">
                    <a href="{{ path("applicant_show", {id: applicant.applicant_id}) }}"
                       class="d-inline-block btn btn-offer btn-bleuOze d-inline-flex">Voir fiche</a>
                </div>
            </div>
        </div>
    {% endfor %}
    {% endblock %}
