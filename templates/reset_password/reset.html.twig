{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% include '/reset_password/_navbar.html.twig' %}
    <h1>Réinitialisation du mot de passe</h1>

    <div id="reset-password-container">
        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            <button id="registerBtn" class="btn-center btn btn-orangeOze">Réinitialiser</button>
        {{ form_end(resetForm) }}
    </div>

    <div class="center">
        <img id="requestImg" src="{{ asset('build/images/request2.jpg') }}" alt="Image d'une joyeuse réunion de bureau">
    </div>
{% endblock %}
