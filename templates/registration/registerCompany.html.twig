{% extends 'base.html.twig' %}

{% block title %}Création de compte entreprise{% endblock %}

{% block body %}
    <div id="home-list-pictures">
        <div id="home-list-picture1">
            <a href="{{ path("home") }}">
                <img id="diversite1" src="{{ asset('build/images/logoNavBar_noBg.png') }}" alt="Image Ozé La Diversité avec logo">
            </a>
        </div>
    </div>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Création de compte entreprise</h1>
    <div class="form-group" id="company-register">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.company.name, {
            'label': "Nom de l'entreprise"
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password, {
            'label': 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.company.siretNb, {
            'label': "Numéro de SIRET"
        }) }}
        {{ form_row(registrationForm.company.apeNb, {
            'label': "Numéro d'APE"
        }) }}
        <label id="registerFormShape">{{ form_widget(registrationForm.accepterLesTermes) }}
            Accepter les termes et conditions d'utilisation<a href="{{ path("legalTerms") }}">Voir les mentions légales</a></label>

        <button id="registerBtn" class="btn-center btn btn-orangeOze">{{ button_label|default('S\'inscrire') }}</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
