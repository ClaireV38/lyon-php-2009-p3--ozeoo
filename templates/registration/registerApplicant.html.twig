{% extends 'base.html.twig' %}

{% block title %}Création de compte candidat{% endblock %}

{% block body %}
    {% include '/applicant/_navbar.html.twig' %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Création de compte candidat</h1>
    <div class="container" id="company-register">
        {{ form_start(ApplicantRegister) }}
        {{ form_row(ApplicantRegister.email) }}
        {{ form_row(ApplicantRegister.password, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(ApplicantRegister.accepterLesTermes) }}

        <button class="btn btn-bleuOze">{{ button_label|default('S\'inscrire') }}</button>
        {{ form_end(ApplicantRegister) }}
    </div>
{% endblock %}