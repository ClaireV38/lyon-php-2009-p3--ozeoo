{% extends 'base.html.twig' %}

{% block title %}Accueil entreprise{% endblock %}

{% block body %}
    {% include '/company/_navbar.html.twig' %}
    <div class="container d-flex flex-column" id="company-home-body">
        <h1 class="d-block text-center">Accueil entreprise</h1>
        <a class="d-block btn btn-bleuOze btn-lg align-content-center"
           id="create-company-card" href="{{ path("company_edit", {id: app.user.company.id}) }}" role="button">
            Créer sa fiche entreprise
        </a>
    </div>

    <div class="container d-block" id="announce-list-homecompany">
        <h1 class="text-center">Liste des annonces</h1>
        <div id="legend-announce-company">
            <div id="people-box-card-legend" class="people-box-card-legend">
                <div id="square-number-match-people-legend">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-person-fill" id="logo-people-legend" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    </svg>
                    <p class="card-text" id="text-square-people-legend">10</p>
                </div>
                <p id="text-legend-announce-company"> : Nombre de match</p>
            </div>
            <div id="people-box-card-legend">
                <div id="square-number-candidate-people-legend">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-person-fill" id="logo-people-legend" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    </svg>
                    <p class="card-text" id="text-square-people-legend">10</p>
                </div>
                <p id="text-legend-announce-company"> : Nombre de candidat</p>
            </div>
        </div>

    <div class="card container" id="announce-card-homecompany">
        <div class="card-body">
            <h5 class="card-title text-center" id="title-announce-desktop">Intitulé du poste</h5>
            <div id="people-box-card">
                <div id="square-number-match-people">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-person-fill" id="logo-people" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    </svg><p class="card-text" id="text-square-people">10</p></div>
                <div id="square-number-candidate-people">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-person-fill" id="logo-people" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    </svg><p class="card-text" id="text-square-people">10</p></div>
            </div>
            <a href="#" class="card-link"><button class="btn btn-orangeOze">Voir match</button></a>
            <a href="#" class="card-link"><button class="btn btn-bleuOze">Editer</button></a>
        </div>
    </div>
{% endblock %}