{% extends 'base.html.twig' %}

{% block title %}Accueil entreprise{% endblock %}

{% block body %}
    {% include '/company/_navbar.html.twig' %}
<div class="container d-flex flex-column" id="company-home-body">
    <h1 class="d-block text-center">Accueil entreprise</h1>
    <a class="d-block btn btn-bleuOze btn-lg align-content-center"
       id="create-company-card" href="{{ path("company_edit", {id: app.user.company.id}) }}" role="button">
        Cr√©er sa fiche entreprise
    </a>
</div>


<div class="container d-block" id="announce-list-homecompany">
    <h1 class="text-center">Liste de vos annonces</h1>
    {% for offer in company.offers %}
        <div class="card container" id="announce-card-homecompany">
            <div class="row-announce card-body flex-column flex-md-row align-items-center justify-content-between">
                <h5 class="d-inline-block mb-2 mr-md-2 w-100 card-title mb-0 text-center" id="title-announce-desktop">{{ offer.title }}</h5>
                <div class="row-info-right w-100 flex-md-row">
                    <div class="row-info-nb d-md-inline-block flex-md-row align-items-center text-center">
                        <p class="d-md-inline-block mr-md-2 mb-1" class="card-text"> nb matchs :
                            <strong>120</strong></p>
                        <p class="d-md-inline-block mr-md-2 mb-1" class="card-text"> nb candidats :
                            <strong>10</strong></p>
                    </div>
                    <div class="row-btn-offer d-md-inline-block flex justify-content-around">
                        <a href="#" class="d-inline-block btn btn-offer btn-orangeOze d-inline-flex">Voir matchs</a>
                        <a href="#" class="d-inline-block btn btn-offer btn-bleuOze d-inline-flex">Editer</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {% endblock %}
