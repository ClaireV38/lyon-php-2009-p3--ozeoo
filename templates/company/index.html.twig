{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SiretNb</th>
                <th>ContactEmail</th>
                <th>ApeNb</th>
                <th>Picture</th>
                <th>Video</th>
                <th>Description</th>
                <th>CorporateCulture</th>
                <th>Csr</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.siretNb }}</td>
                <td>{{ company.contactEmail }}</td>
                <td>{{ company.apeNb }}</td>
                <td>{{ company.picture }}</td>
                <td>{{ company.video }}</td>
                <td>{{ company.description }}</td>
                <td>{{ company.corporateCulture }}</td>
                <td>{{ company.csr }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}">Create new</a>
{% endblock %}
